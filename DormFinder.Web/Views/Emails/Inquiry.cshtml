@using DormFinder.Web.Models

@model InquiryModel

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />

    <style>
        .emphasis {
            font-weight: bold;
        }

        .button-link {
            display: inline-block;
            padding: 8px 16px;
            color: white !important;
            background-color: #01579b !important;
            text-decoration: none !important;
        }

        .no-reply {
            border-top: thin solid rgba(0, 0, 0, 0.17);
            padding-top: 16px;
        }

        .messagecontainer {
            padding: 20px;
            border: 1px solid #ccc;
            font-style: italic
        }
    </style>
</head>
<body>
    <h3 class="emphasis">DormFinder</h3>

    <div><span class="emphasis">@Model.InquiryFullName</span> is interested to your property.</div>
    <div>Building: @Model.BuildingName</div>
    <div>Address: @Model.Address</div>
    <div>Room: @Model.RoomName</div>

    <div>Inquiry Message</div>
    <div class="messagecontainer">" @Model.Message "</div>
    <div>Email: @Model.Email</div>
    <div>Contact #: @Model.Number</div>
    <div>Date Inquire: @Model.CreatedAt</div>

    <a class="button-link" href="">VIEW INQUIRY</a>

    <p class="no-reply">This is an automated email. Please do not reply to it.</p>
</body>
</html>